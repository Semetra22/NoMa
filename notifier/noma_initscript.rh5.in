# source function library
. /etc/init.d/functions

RETVAL=0
prog="noma_daemon.pl"
nagios_bin="@NOTIFIERDIR@"
RUNUSER="@RUNAS@"
RUNGROUP="@RUNASGRP@"

start() {
	echo -n $"Starting $prog: "

	daemon --user $RUNUSER $nagios_bin/$prog
	RETVAL=$?
	echo
	return $RETVAL
}

stop() {
	echo -n $"Stopping $prog: "
	killproc $nagios_bin/$prog 2>/dev/null
	RETVAL=$?
	if [ $RETVAL == 0 ]; then
		rm -f $PIDFILE
	fi
	echo
	return $RETVAL
}

restart(){
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart)
	restart
        ;;
  status)
        status $prog
	RETVAL=$?
        ;;
  *)
	echo $"Usage: $0 {start|stop|restart}"
	RETVAL=1
esac

exit $RETVAL
